<?xml version='1.0'?>
<robot name="lols" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.2"/>
  <xacro:property name="wheel_thickness" value="0.1" />
  <xacro:property name="wheel_mass" value="0.2" />
  <xacro:property name="chassis_length" value="1" />
  <xacro:property name="chassis_breadth" value="0.5" />
  <xacro:property name="chassis_height" value="0.25" />
  <xacro:property name="chassis_mass" value="5" />

  <xacro:include filename="$(find ohno)/urdf/materials.xacro"/>
  
  <gazebo>
    <static>False</static>
  </gazebo>

  <link name="dummy"/>

  <!-- Base Link -->
  <link name="base_link">
    <pose>0 0 3 0 0 0</pose>

    <visual>
      <material name="white"/>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <geometry>
          <box size="${chassis_length} ${chassis_breadth} ${chassis_height}"/>
      </geometry>
    </visual>
    <!-- Base collision, mass and inertia -->
    
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <geometry>
          <box size="${chassis_length} ${chassis_breadth} ${chassis_height}"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="${chassis_mass}"/>
      <inertia ixx="0.13" ixy="0.0" ixz="0.0" iyy="0.21" iyz="0.0" izz="0.13"/>
    </inertial>
  </link>

  <gazebo reference="base_link">
    <material>Gazebo/White</material>
  </gazebo>

  <link name="right_front">
        <inertial>
            <!-- <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> -->
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <material name="black"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}" />
            </geometry>
        </collision>
    </link>
    
    <gazebo reference ="right_front">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="joint_right_front" type="continuous">
        <origin xyz="0.4 -0.3 0.05" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_front"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_front">
        <inertial>
            <!-- <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> -->
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <material name="black"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}" />
            </geometry>
        </collision>
    </link>
    
    <gazebo reference ="left_front">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="joint_left_front" type="continuous">
        <origin xyz="0.4 0.3 0.05" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_front"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_back">
        <inertial>
            <!-- <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> -->
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <material name="black"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}" />
            </geometry>
        </collision>
    </link>
    
    <gazebo reference ="right_back">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="joint_right_back" type="continuous">
        <origin xyz="-0.4 -0.3 0.05" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_back"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_back">
        <inertial>
            <!-- <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/> -->
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <material name="black"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0"/>
            <geometry>
                <cylinder length="${wheel_thickness}" radius="${wheel_radius}" />
            </geometry>
        </collision>
    </link>
    
    <gazebo reference ="left_back">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="joint_left_back" type="continuous">
        <origin xyz="-0.4 0.3 0.05" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_back"/>
        <axis xyz="0 1 0"/>
    </joint>

  <joint name="dummy_joint" type="fixed">
    <origin xyz="0.0 0.0 1" rpy="0.0 0.0 0.0"/>
  
    <parent link="dummy"/>
    <child link="base_link"/>
  </joint>

</robot>