<?xml version="1.0"?>
<robot name="lols"  xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name='define_wheel' params='name_a name_b rad thicc origin_xyz'>
        <link name="${name_a}">
            <inertial>
                <origin xyz="0 0 0" rpy="0 1.57 1.57"/>
                <mass value="0.2"/>
                <inertia ixx="0.0005417" ixy="0" ixz="0" iyy="0.0005417" iyz="0" izz="0.001"/>
            </inertial>
            
            <collision>
                <geometry>
                    <cylinder radius="${rad}" length="${thicc}"/>
                </geometry>
            </collision>

            <visual>
                <origin xyz="0 0 0" rpy="0 1.57 1.57"/>
                <geometry>
                    <cylinder radius="${rad}" length="${thicc}"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 1 1"/>
                </material>
            </visual>
        </link>
        <joint name="${name_b}" type="continuous">
            <origin xyz="${origin_xyz}" rpy="0 0 0"/>
            <parent link="base_link"/>
            <child link="${name_a}"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>
</robot>
